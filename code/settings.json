{
  // editor
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code Medium, Menlo",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.suggestSelection": "first",
  "workbench.colorTheme": "Tomorrow Night Blue",
  "window.zoomLevel": 0,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "diffEditor.ignoreTrimWhitespace": false,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "markdown-pdf.displayHeaderFooter": false,
  "markdown-pdf.breaks": true,

  // telemetry
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  // java
  "java.configuration.checkProjectSettingsExclusions": false,
  "java.semanticHighlighting.enabled": true,
  "java.home": "/Library/Java/JavaVirtualMachines/jdk-11.0.2.jdk/Contents/Home",
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/Users/mike/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",

  // python
  "python.languageServer": "Microsoft",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/usr/local/bin/black"
}
